# ==============================================
# YAAKE Backend Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control!

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server port (default: 5000)
PORT=5001

# Node environment: development, staging, production
NODE_ENV=development

# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB connection string
# Option 1: Full connection string (recommended)
MONGO_URI=mongodb://localhost:27017/yaake

# Option 2: Individual connection parameters (if MONGO_URI not provided)
# MONGO_USER=your_username
# MONGO_PWD=your_password
# MONGO_HOST=localhost:27017

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================

# JWT secret for signing tokens (use a long, random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT token expiration time (e.g., "24h", "7d", "30d")
JWT_EXPIRE=24h

# ==============================================
# GUEST MODE CONFIGURATION (Optional)
# ==============================================

# Guest mode is enabled by default for demos and networking events
# These settings are optional and have sensible defaults

# Enable/disable guest mode feature (default: true)
# GUEST_MODE_ENABLED=true

# Custom guest email domain (default: demo.yaake.com)
# GUEST_EMAIL_DOMAIN=demo.yaake.com

# Guest account expiration in days (default: never expires)
# Set to auto-delete inactive guest accounts after specified days
# GUEST_ACCOUNT_EXPIRY_DAYS=30

# Rate limiting for guest registration
# GUEST_RATE_LIMIT_WINDOW=900000   # 15 minutes in milliseconds
# GUEST_RATE_LIMIT_MAX=10           # Max 10 guest registrations per window

# ==============================================
# AI / GEMINI CONFIGURATION
# ==============================================

# Google Gemini API key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini model to use (default: gemini-2.0-flash)
# Options: gemini-pro, gemini-2.0-flash, gemini-1.5-pro
GEMINI_MODEL=gemini-2.0-flash

# Enable prompt debugging (true/false)
PROMPT_DEBUG=false

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# Resend API key for sending emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key-here

# From email address for outreach emails
# Must be verified in your Resend account
OUTREACH_FROM_EMAIL=noreply@yourdomain.com

# ==============================================
# ERROR TRACKING & MONITORING
# ==============================================

# Sentry DSN for error tracking (optional but recommended for production)
# Get from: https://sentry.io -> Create Project -> Copy DSN
# Leave empty to disable Sentry
SENTRY_DSN=

# Sentry environment (defaults to NODE_ENV if not set)
SENTRY_ENVIRONMENT=development

# ==============================================
# LOGGING CONFIGURATION (Optional)
# ==============================================

# Enable file logging (automatically enabled in production)
# Set to true to enable in development
LOG_TO_FILE=false

# Custom logs directory (default: ./logs)
# LOGS_DIR=/var/log/yaake

# Replace console.log with Winston logger in production (default: true)
# Set to false if you want to keep console.log behavior
REPLACE_CONSOLE=true

# ==============================================
# HTTPS CONFIGURATION (Optional)
# ==============================================

# Enable HTTPS (true/false)
HTTPS_ENABLED=false

# SSL certificate paths (only if HTTPS_ENABLED=true)
# Generate self-signed certs with:
# mkdir -p backend/config/ssl && openssl req -x509 -newkey rsa:4096 -keyout backend/config/ssl/key.pem -out backend/config/ssl/cert.pem -days 365 -nodes
SSL_KEY_PATH=./config/ssl/key.pem
SSL_CERT_PATH=./config/ssl/cert.pem

# ==============================================
# PRODUCTION CHECKLIST
# ==============================================
# Before deploying to production, ensure:
# ✅ Change JWT_SECRET to a strong random value
# ✅ Set NODE_ENV=production
# ✅ Add SENTRY_DSN for error tracking
# ✅ Use production MongoDB instance (not localhost)
# ✅ Set FRONTEND_URL to your production domain
# ✅ Update OUTREACH_FROM_EMAIL to a verified domain
# ✅ Enable HTTPS (HTTPS_ENABLED=true) with valid SSL certificates
# ✅ Review all default values and update as needed
